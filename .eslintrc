{
  "extends": ["airbnb", "airbnb/hooks", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-alert": "off",
    "import/extensions": ["error", "always", { "ignorePackages": true }],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "all",
        "endOfLine": "auto"
      }
    ]
  },
  "env": {
    "browser": true,
    "es2021": true,
    "es6": true
  },
  "plugins": ["prettier"]
}
